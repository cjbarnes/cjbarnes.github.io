# EditorConfig file for cJ barnes website.
#
# This file is for unifying the coding style for different editors and IDEs
# (see http://editorconfig.org)


root = true

# Defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

# Markdown files
[{*.md,*.mdown,*.txt}]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

# Stylesheets
[{*.css,*.sass,*.scss}]
indent_size = 4
